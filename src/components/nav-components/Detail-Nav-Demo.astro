---
import DetailsMoreNav from '../../config/details-more-nav.json'
import DetailsNav from '../../config/detail-nav.json'

const data = DetailsNav;
const dataMore = DetailsMoreNav;
---

<section class="w-full pb-6 pl-6 py-5 xl:pl-1 lg:py-10">
    <div class="w-full">
        <span class="font-semibold text-lg xl:text-[1.6rem]">More on Ableton.com:</span>
        <article class="w-max flex flex-col gap-2 py-3 lg:w-full lg:gap-5 lg:flex-row lg:py-5 xl:gap-7 ">
            {
                data.map((item, index)=>(
                    <a class:list={["text-sm xl:text-lg", {"text-[#FF7675]" : item.color}]} href={item.url}>{item.detail}</a>
                ))
            }
        </article>
    </div>
    <div class="w-full mt-2 pl-1 lg:mt-5">
        <span class="font-semibold text-lg xl:text-[1.6rem]">More from Ableton:</span>
        <div class="grid grid-cols-4 mr-1 text-sm gap-5 pt-3 lg:pt-5 lg:mr-12 xl:gap-7 xl:text-lg">
            {
                dataMore.map((item) => (
                    <a href={item.url}>
                        <section>
                            <span class="font-semibold">{item.title}</span>
                            <p>{item.detail}</p>
                        </section>
                    </a>
                ))
            }
        </div>
    </div>
</section>